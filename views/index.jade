extends layout


block content
    .container
        h2.text-center Enter Team ID
        form.text-center(method="post", action="/generate/team")
            .form-group.col-sm-offset-4.col-sm-4
                label(for="teamId", value="Team ID")
                input.form-control(type='number', min="1", max="9999999", name="teamId", value="#{teamId}")
            .btn-wrap.col-sm-12
                input.btn.btn-primary.center-block(type='submit', value="Generate")
